<Window x:Class="Certificari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Certificari" 
        Height="500" Width="725"
        MinHeight="400" MinWidth="600" Icon="Assets/logo.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Margin="0,25,0,10" IsEnabled="False">
            <TabItem Header="Operatii">
                <Grid Background="#FFE5E5E5">
                    <Grid Height="72" VerticalAlignment="Top" Background="#FFE2E0E0">
                        <RadioButton Content="Candidati" HorizontalAlignment="Left" IsChecked="True" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <RadioButton Content="Programe acreditate" HorizontalAlignment="Left" Margin="114,10,0,0" VerticalAlignment="Top"/>
                        <Button IsEnabled="False" Content="Adauga" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button IsEnabled="False" Content="Editeaza" HorizontalAlignment="Left" Margin="90,42,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button IsEnabled="False" Content="Sterge" HorizontalAlignment="Left" Margin="170,42,0,0" VerticalAlignment="Top" Width="75"/>
                    </Grid>
                    <DataGrid Margin="0,77,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Nomenclator">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu Height="20" VerticalAlignment="Top" Background="#FFCDCDCD">
            <MenuItem Header="General">
                <MenuItem Header="Baza de date">
                    <MenuItem x:Name="MenuImportDB" Header="Import"/>
                    <MenuItem x:Name="MenuExportDB" Header="Export"/>
                </MenuItem>
                <MenuItem x:Name="MenuUnitate" Click="MenuUnitate_Click" Header="Unitate"></MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="MenuIesire" Header="Iesire"></MenuItem>
            </MenuItem>
            <MenuItem Header="Ajutor">
                <MenuItem x:Name="MenuManual" Header="Manual"></MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="MenuAbout" Header="Despre Soft"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
