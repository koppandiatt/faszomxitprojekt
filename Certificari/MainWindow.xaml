<Window x:Class="Certificari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Certificari.Behavior"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Certificari" 
        Height="500" Width="725"
        MinHeight="400" MinWidth="600" Icon="Assets/logo.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Margin="0,25,0,10" IsEnabled="True" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Operatii">
                <Grid Background="#FFE5E5E5">
                    <Grid Height="72" VerticalAlignment="Top" Background="#FFE2E0E0">
                        <RadioButton Content="Candidati" HorizontalAlignment="Left" IsChecked="True" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <RadioButton Content="Programe acreditate" HorizontalAlignment="Left" Margin="114,10,0,0" VerticalAlignment="Top"/>
                        <Button IsEnabled="True" Content="Adauga" HorizontalAlignment="Left" Margin="280,7,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                        <Button IsEnabled="False" Content="Editeaza" HorizontalAlignment="Left" Margin="360,7,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button IsEnabled="False" Content="Sterge" HorizontalAlignment="Left" Margin="440,7,0,0" VerticalAlignment="Top" Width="75"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Padding="2" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
                        <Button Content="Cauta" HorizontalAlignment="Left" Margin="246,39,0,0" VerticalAlignment="Top" Width="47" Height="23"/>
                    </Grid>
                    <DataGrid Margin="0,77,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Nomenclator">
               
                
                
                <Grid Background="#FFE5E5E5" >
                    <StackPanel Orientation="Vertical">
                        <StackPanel Margin="0 5 0 0" Orientation="Horizontal">
                            <Label  Content="Document Source"></Label>
                            <TextBox Name="docSrctxtbox" VerticalContentAlignment="Center"  Margin="5 0 0 0" MinWidth="200"  ></TextBox>
                            <Label  Content="Document Name"></Label>
                            <TextBox Name="docNametxtbox" VerticalContentAlignment="Center" Margin="5 0 0 0" MinWidth="100"></TextBox>
                            <Button Margin="10 0 0 0" Content="Add Document"   Width="105" Click="Add_document" />
                        </StackPanel>
                        <TextBlock Name="nomenclatorErrortblock" Visibility="Collapsed" Text="dasdas" Foreground="Red" FontSize="15" FontWeight="SemiBold"  ></TextBlock>
                        <DataGrid x:Name="GridDocumentList" CanUserAddRows="False"  AutoGenerateColumns="True"   Margin="0,5,0,0" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={local:RowToIndexConverter}}" />
                               
                            </DataGrid.Columns>


                        </DataGrid>

                       

                    </StackPanel>


                    
                    
                </Grid>
            </TabItem>
        </TabControl>
        <Menu Height="20" VerticalAlignment="Top" Background="#FFCDCDCD">
            <MenuItem Header="General">
                <MenuItem Header="Baza de date">
                    <MenuItem x:Name="MenuImportDB" Header="Import"/>
                    <MenuItem x:Name="MenuExportDB" Header="Export"/>
                </MenuItem>
                <MenuItem x:Name="MenuUnitate" Click="MenuUnitate_Click" Header="Unitate"></MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="MenuIesire" Header="Iesire"></MenuItem>
            </MenuItem>
            <MenuItem Header="Ajutor">
                <MenuItem x:Name="MenuManual" Header="Manual"></MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="MenuAbout" Header="Despre Soft"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
